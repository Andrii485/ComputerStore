<Window x:Class="ElmirClone.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мої замовлення" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Добавление стиля ActionButtonStyle -->
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C3E50"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Мої замовлення" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Список заказов -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="OrdersList" SelectionChanged="OrdersList_SelectionChanged" Margin="0,0,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding OrderId}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding OrderDate, StringFormat=dd.MM.yyyy HH:mm}"/>
                                <TextBlock Text="{Binding Status}"/>
                                <TextBlock Text="{Binding DeliveryAddress}"/>
                                <TextBlock Text="{Binding PaymentStatus}"/>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ProductName}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Quantity}" Margin="0,0,5,0"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Price, StringFormat=F2}"/>
                                                    <TextBlock Text=" грн" Margin="2,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding TotalAmount, StringFormat=F2}"/>
                                    <TextBlock Text=" грн" Margin="2,0,0,0" FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CloseOrderButton" Content="Скасувати замовлення" Click="CloseOrderButton_Click" Margin="5" Style="{StaticResource ActionButtonStyle}" IsEnabled="False"/>
            <Button x:Name="ConfirmReceiptButton" Content="Підтвердити отримання" Click="ConfirmReceiptButton_Click" Margin="5" Style="{StaticResource ActionButtonStyle}" IsEnabled="False"/>
            <Button x:Name="ProcessPaymentButton" Content="Обробити оплату" Click="ProcessPayment" Margin="5" Style="{StaticResource ActionButtonStyle}" IsEnabled="False"/>
            <Button x:Name="ReturnButton" Content="Повернути" Click="ReturnButton_Click" Margin="5" Style="{StaticResource ActionButtonStyle}" IsEnabled="False"/>
            <Button x:Name="BackToShoppingButton" Content="Повернутися до покупок" Click="BackToShoppingButton_Click" Margin="5" Style="{StaticResource ActionButtonStyle}"/>
            <Button x:Name="RetryOrderLoad" Content="Перезавантажити" Click="RetryOrderLoad_Click" Margin="5" Style="{StaticResource ActionButtonStyle}" Width="130"/>
        </StackPanel>
    </Grid>
</Window>