<Window x:Class="ElmirClone.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Адмін-панель ElitePC" Height="700" Width="1200" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF5722"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2C2F33">
            <TextBlock Text="Адмін-панель ElitePC" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="15"/>
        </Border>

        <!-- Основний контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Бічна панель -->
            <StackPanel Grid.Column="0" Background="#E0E0E0" Margin="5">
                <Button Content="Керування користувачами" Click="ShowUsersPanel_Click"/>
                <Button Content="Керування каталогом" Click="ShowCatalogPanel_Click"/>
                <Button Content="Фінансові налаштування" Click="ShowFinancePanel_Click"/>
                <Button Content="Логістика та доставка" Click="ShowLogisticsPanel_Click"/>
                <Button Content="Вийти" Style="{StaticResource LogoutButtonStyle}" Click="Logout_Click" Margin="5,20,5,5"/>
            </StackPanel>

            <!-- Панель керування -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Панель керування користувачами -->
                    <StackPanel x:Name="UsersPanel" Visibility="Visible">
                        <TextBlock Text="Керування користувачами" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="NewUserUsername" Width="150" Margin="0,0,5,0" Text="Ім'я користувача"/>
                            <TextBox x:Name="NewUserEmail" Width="200" Margin="0,0,5,0" Text="Електронна пошта"/>
                            <PasswordBox x:Name="NewUserPassword" Width="150" Margin="0,0,5,0" Password="Пароль"/>
                            <ComboBox x:Name="NewUserRole" Width="100" Margin="0,0,5,0">
                                <ComboBoxItem Content="Покупець" IsSelected="True"/>
                                <ComboBoxItem Content="Продавець"/>
                            </ComboBox>
                            <Button Content="Зареєструвати" Click="RegisterUser_Click"/>
                        </StackPanel>
                        <DataGrid x:Name="UsersList" AutoGenerateColumns="False" Margin="0,5,0,10" CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ім'я користувача" Binding="{Binding Username}" Width="150"/>
                                <DataGridTextColumn Header="Електронна пошта" Binding="{Binding Email}" Width="200"/>
                                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                                <DataGridTemplateColumn Header="Дії" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Заблокувати" Click="BlockUser_Click" Tag="{Binding UserId}" Margin="5,0"/>
                                                <Button Content="Видалити" Click="DeleteUser_Click" Tag="{Binding UserId}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Панель керування каталогом -->
                    <StackPanel x:Name="CatalogPanel" Visibility="Collapsed">
                        <TextBlock Text="Керування каталогом" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <!-- Керування категоріями -->
                        <TextBlock Text="Категорії" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="NewCategoryName" Width="200" Margin="0,0,5,0" Text="Назва категорії"/>
                                <Grid Width="150" Margin="0,0,5,0">
                                    <ComboBox x:Name="ParentCategory" Width="150" />
                                    <TextBlock Text="Оберіть батьківську категорію" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=ParentCategory, Path=SelectedItem}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBox x:Name="ImagePathTextBox" Width="200" Margin="0,0,5,0" IsReadOnly="True" Text="Шлях до зображення"/>
                                <Button Content="Обрати зображення" Click="SelectImage_Click"/>
                            </StackPanel>
                            <Button Content="Додати категорію" Click="AddCategory_Click" Margin="0,5,0,0"/>
                        </StackPanel>
                        <DataGrid x:Name="CategoriesList" AutoGenerateColumns="False" Margin="0,5,0,10" CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                                <DataGridTextColumn Header="Батьківська категорія" Binding="{Binding ParentCategoryName}" Width="150"/>
                                <DataGridTextColumn Header="Зображення" Binding="{Binding ImageUrl}" Width="200"/>
                                <DataGridTemplateColumn Header="Дії" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Редагувати" Click="EditCategory_Click" Tag="{Binding CategoryId}" Margin="5,0"/>
                                                <Button Content="Видалити" Click="DeleteCategory_Click" Tag="{Binding CategoryId}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Керування товарами -->
                        <TextBlock Text="Товари" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <DataGrid x:Name="ProductsList" AutoGenerateColumns="False" Margin="0,5,0,10" CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="150"/>
                                <DataGridTextColumn Header="Ціна" Binding="{Binding Price, StringFormat={}{0:C}}" Width="80"/>
                                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand}" Width="100"/>
                                <DataGridTextColumn Header="Категорія" Binding="{Binding CategoryName}" Width="120"/>
                                <DataGridTextColumn Header="Підкатегорія" Binding="{Binding SubcategoryName}" Width="120"/>
                                <DataGridTextColumn Header="Зображення" Binding="{Binding ImageUrl}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Панель фінансових налаштувань -->
                    <StackPanel x:Name="FinancePanel" Visibility="Collapsed">
                        <TextBlock Text="Фінансові налаштування" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <!-- Способи оплати -->
                        <TextBlock Text="Способи оплати" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="NewPaymentMethodName" Width="200" Margin="0,0,5,0" Text="Назва способу оплати"/>
                            <Button Content="Додати" Click="AddPaymentMethod_Click"/>
                        </StackPanel>
                        <DataGrid x:Name="PaymentMethodsList" AutoGenerateColumns="False" Margin="0,5,0,10" CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                                <DataGridCheckBoxColumn Header="Активний" Binding="{Binding IsActive}" Width="100"/>
                                <DataGridTemplateColumn Header="Дії" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Редагувати" Click="EditPaymentMethod_Click" Tag="{Binding MethodId}" Margin="5,0"/>
                                                <Button Content="Видалити" Click="DeletePaymentMethod_Click" Tag="{Binding MethodId}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Панель логістики та доставки -->
                    <StackPanel x:Name="LogisticsPanel" Visibility="Collapsed">
                        <TextBlock Text="Логістика та доставка" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <!-- Кур'єрські служби -->
                        <TextBlock Text="Кур'єрські служби" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="NewCourierService" Width="200" Margin="0,0,5,0" Text="Назва служби"/>
                            <Button Content="Додати" Click="AddCourierService_Click"/>
                        </StackPanel>
                        <DataGrid x:Name="CourierServicesList" AutoGenerateColumns="False" Margin="0,5,0,10" CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                                <DataGridCheckBoxColumn Header="Активна" Binding="{Binding IsActive}" Width="100"/>
                                <DataGridTemplateColumn Header="Дії" Width="300">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Зберегти" Click="UpdateCourierService_Click" Tag="{Binding ServiceId}" Margin="5,0"/>
                                                <Button Content="Редагувати" Click="EditCourierService_Click" Tag="{Binding ServiceId}" Margin="5,0"/>
                                                <Button Content="Видалити" Click="DeleteCourierService_Click" Tag="{Binding ServiceId}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Пункти самовивозу -->
                        <TextBlock Text="Пункти самовивозу" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="NewPickupPointAddress" Width="200" Margin="0,0,5,0" Text="Адреса"/>
                            <ComboBox x:Name="NewPickupPointRegion" Width="150" Margin="0,0,5,0"/>
                            <Button Content="Додати" Click="AddPickupPoint_Click"/>
                        </StackPanel>
                        <DataGrid x:Name="PickupPointsList" AutoGenerateColumns="False" Margin="0,5,0,10" CanUserAddRows="False" CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Адреса" Binding="{Binding Address}" Width="200"/>
                                <DataGridTextColumn Header="Регіон" Binding="{Binding Region}" Width="150"/>
                                <DataGridTemplateColumn Header="Дії" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Редагувати" Click="UpdatePickupPoint_Click" Tag="{Binding PickupPointId}" Margin="5,0"/>
                                                <Button Content="Видалити" Click="DeletePickupPoint_Click" Tag="{Binding PickupPointId}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>