<Window x:Class="ElmirClone.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" Height="500" Width="600" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CheckoutButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#00C853"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Ваша корзина" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="CartItemsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Image Source="{Binding ImageUrl}" Width="50" Height="50" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Name}" Width="200" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Price, StringFormat={}{0:F2} грн}" Width="100" VerticalAlignment="Center"/>
                            <Button Content="Удалить" Click="RemoveFromCart_Click" Tag="{Binding ProductId}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Итоговая сумма -->
        <TextBlock Grid.Row="2" x:Name="TotalPriceText" FontSize="16" FontWeight="Bold" Margin="0,10,0,10" HorizontalAlignment="Right"/>

        <!-- Выбор способа оплаты -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="Способ оплаты:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="PaymentMethodsComboBox" Width="200"/>
        </StackPanel>

        <!-- Кнопка оформления -->
        <Button Grid.Row="4" Content="Оформить заказ" Style="{StaticResource CheckoutButtonStyle}" Click="Checkout_Click" HorizontalAlignment="Right"/>
    </Grid>
</Window>