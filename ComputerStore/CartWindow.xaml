<Window x:Class="ElmirClone.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" Height="847" Width="800" Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CheckoutButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#00C853"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Ваша корзина" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333333"/>

            <!-- Список товаров -->
            <TextBlock Text="Товары в корзине" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White" Padding="10">
                <ItemsControl x:Name="CartItemsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Image Source="{Binding ImageUrl}" Width="60" Height="60" Margin="0,0,10,0" Stretch="Uniform">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ImageUrl}" Value="{x:Null}">
                                                    <Setter Property="Source" Value="https://via.placeholder.com/60?text=No+Image"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock Text="{Binding Name}" Width="300" VerticalAlignment="Center" FontSize="14"/>
                                <TextBlock Text="{Binding Price, StringFormat={}{0:F2} грн}" Width="100" VerticalAlignment="Center" FontSize="14"/>
                                <Button Content="Удалить" Click="RemoveFromCart_Click" Tag="{Binding ProductId}" Width="80"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Общая сумма -->
            <TextBlock x:Name="TotalPriceText" FontSize="16" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Right" Foreground="#333333"/>

            <!-- Контактные данные -->
            <TextBlock Text="Ваши контактные данные" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White" Padding="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Фамилия:" Width="150" VerticalAlignment="Center"/>
                        <TextBox x:Name="ContactLastName" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Имя:" Width="150" VerticalAlignment="Center"/>
                        <TextBox x:Name="ContactFirstName" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Отчество:" Width="150" VerticalAlignment="Center"/>
                        <TextBox x:Name="ContactMiddleName" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Мобильный телефон:" Width="150" VerticalAlignment="Center"/>
                        <TextBox x:Name="ContactPhone" Width="300"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Выбор области -->
            <TextBlock Text="Область доставки" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White" Padding="10">
                <ComboBox x:Name="ShippingRegion" Width="300" HorizontalAlignment="Left" SelectionChanged="ShippingRegion_SelectionChanged"/>
            </Border>

            <!-- Выбор пункта самовывоза -->
            <TextBlock Text="Пункт самовывоза" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White" Padding="10">
                <ComboBox x:Name="PickupPoint" Width="300" HorizontalAlignment="Left" DisplayMemberPath="Address" SelectedValuePath="PickupPointId"/>
            </Border>

            <!-- Способы оплаты -->
            <TextBlock Text="Способ оплаты" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White" Padding="10">
                <ComboBox x:Name="PaymentMethodsComboBox" Width="300" HorizontalAlignment="Left" DisplayMemberPath="Name" SelectedValuePath="PaymentMethodId"/>
            </Border>

            <!-- Кнопка оформления -->
            <Button x:Name="CheckoutButton" Content="Оформить заказ" Style="{StaticResource CheckoutButtonStyle}" Click="Checkout_Click" Width="200" Margin="0,20,0,0" HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Window>