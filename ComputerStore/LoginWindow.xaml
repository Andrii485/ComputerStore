<Window x:Class="ElmirClone.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="820" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <!-- Градиентный фон -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E0F7FA" Offset="0"/>
            <GradientStop Color="#80DEEA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <!-- Стиль для кнопки действия -->
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0288D1"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0277BD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#01579B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для полей ввода -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#B0BEC5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#B0BEC5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для RadioButton -->
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="Margin" Value="20,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="RadioOuter" Width="20" Height="20" Fill="Transparent" Stroke="#0288D1" StrokeThickness="2"/>
                            <ContentPresenter Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioOuter" Property="Fill" Value="#0288D1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioOuter" Property="Stroke" Value="#0277BD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для кнопки сброса пароля -->
        <Style TargetType="Button" x:Key="ResetPasswordButtonStyle">
            <Setter Property="Foreground" Value="#0288D1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#0277BD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#01579B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="40">
        <Border Background="#FFFFFF" CornerRadius="15" Margin="0,-10,0,-25">
            <Grid>
                <!-- Нижняя синяя полоса -->
                <Border Background="#0288D1" VerticalAlignment="Bottom" Height="10" CornerRadius="0,0,15,15"/>

                <!-- Основной контент -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                    <!-- Логотип -->
                    <Image Source="https://i.postimg.cc/02SPKrX0/2025-04-17-000603.png" Height="120" Stretch="Uniform" Margin="0,0,0,40"/>

                    <!-- Переключение между Входом и Регистрацией -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <RadioButton x:Name="LoginRadioButton" Content="Вход" GroupName="AuthMode" Checked="LoginRadioButton_Checked"/>
                        <RadioButton x:Name="RegisterRadioButton" Content="Регистрация" GroupName="AuthMode" Checked="RegisterRadioButton_Checked"/>
                    </StackPanel>

                    <!-- Заголовок -->
                    <TextBlock x:Name="TitleTextBlock" Text="Вход" FontSize="28" FontWeight="Bold" Foreground="#37474F" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <!-- Поля для входа -->
                    <StackPanel x:Name="LoginFields">
                        <TextBlock Text="Имя пользователя" FontSize="14" Foreground="#546E7A" Margin="0,0,0,5"/>
                        <TextBox x:Name="UsernameTextBox" Width="350"/>
                        <TextBlock Text="Пароль" FontSize="14" Foreground="#546E7A" Margin="0,20,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Width="350" Margin="0,0,0,40"/>
                    </StackPanel>

                    <!-- Поля для сброса пароля -->
                    <StackPanel x:Name="ResetPasswordFields" Visibility="Collapsed">
                        <TextBlock Text="Введите вашу почту" FontSize="14" Foreground="#546E7A" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailResetTextBox" Width="350"/>
                        <TextBlock Text="Новый пароль" FontSize="14" Foreground="#546E7A" Margin="0,20,0,5"/>
                        <PasswordBox x:Name="NewPasswordBox" Width="350"/>
                        <TextBlock Text="Повторите новый пароль" FontSize="14" Foreground="#546E7A" Margin="0,20,0,5"/>
                        <PasswordBox x:Name="ConfirmNewPasswordBox" Width="350" Margin="0,0,0,40"/>
                        <Button x:Name="ConfirmResetButton" Content="Сбросить пароль" Width="350" Style="{StaticResource ActionButtonStyle}" Background="#FF5722" Click="ConfirmResetButton_Click"/>
                    </StackPanel>

                    <!-- Поля для регистрации с прокруткой -->
                    <ScrollViewer x:Name="RegisterFieldsScrollViewer" Visibility="Collapsed" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <StackPanel x:Name="RegisterFields">
                            <TextBlock Text="Имя" FontSize="14" Foreground="#546E7A" Margin="0,0,0,5"/>
                            <TextBox x:Name="FirstNameTextBox" Width="350"/>
                            <TextBlock Text="Фамилия (не обязательно)" FontSize="14" Foreground="#546E7A" Margin="0,20,0,5"/>
                            <TextBox x:Name="LastNameTextBox" Width="350"/>
                            <TextBlock Text="Почта" FontSize="14" Foreground="#546E7A" Margin="0,20,0,5"/>
                            <TextBox x:Name="EmailTextBox" Width="350"/>
                            <TextBlock Text="Пароль" FontSize="14" Foreground="#546E7A" Margin="0,20,0,5"/>
                            <PasswordBox x:Name="PasswordBoxRegister" Width="350"/>
                            <TextBlock Text="Повторите пароль" FontSize="14" Foreground="#546E7A" Margin="0,20,0,5"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" Width="350"/>
                            <!-- Кнопка для регистрации -->
                            <Button x:Name="RegisterButton" Content="Зарегистрироваться" Width="350" Style="{StaticResource ActionButtonStyle}" Background="#FF5722" Margin="0,40,0,20" Click="ActionButton_Click"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Кнопка для входа -->
                    <Button x:Name="ActionButton" Content="Войти" Width="350" Style="{StaticResource ActionButtonStyle}" Click="ActionButton_Click" Visibility="{Binding ElementName=LoginFields, Path=Visibility}"/>
                    <!-- Кнопка сброса пароля -->
                    <Button x:Name="ResetPasswordButton" Content="Сбросить пароль" Style="{StaticResource ResetPasswordButtonStyle}" HorizontalAlignment="Center" Margin="0,10,0,0" Click="ResetPasswordButton_Click" Visibility="{Binding ElementName=LoginFields, Path=Visibility}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>