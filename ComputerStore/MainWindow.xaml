<Window x:Class="ElmirClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ElitePC Store" Height="700" Width="1200" ResizeMode="CanResizeWithGrip" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="320" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <!-- Расширенная боковая панель -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель -->
        <Border Grid.Column="0" Background="#2C2F33" Margin="10" Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="5">
                    <!-- Кликабельный логотип -->
                    <Button Click="Logo_Click" Background="Transparent" BorderThickness="0" Padding="0" HorizontalAlignment="Center" Margin="10,15,10,20">
                        <Image Source="https://i.postimg.cc/02SPKrX0/2025-04-17-000603.png" Height="60" Stretch="Uniform"/>
                    </Button>

                    <!-- Поиск -->
                    <Border Background="#3A3F44" BorderBrush="#555555" BorderThickness="1">
                        <TextBox Width="250" Height="35" VerticalAlignment="Center" Margin="5,0,5,10" 
                                 Text="Поиск..." GotFocus="SearchBox_GotFocus" FontSize="13" Foreground="#B0B0B0" 
                                 Background="Transparent" BorderThickness="0"/>
                    </Border>

                    <!-- Каталог -->
                    <TextBlock Text="Каталог" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="5,10,5,5"/>
                    <StackPanel>
                        <Button Content="Компьютеры" Click="CategoryButton_Click"/>
                        <Button Content="Процессоры" Click="CategoryButton_Click"/>
                        <Button Content="Материнские платы" Click="CategoryButton_Click"/>
                        <Button Content="Видеокарты" Click="CategoryButton_Click"/>
                        <Button Content="Оперативная память" Click="CategoryButton_Click"/>
                        <Button Content="Оперативная память для ноутбука" Click="CategoryButton_Click"/>
                        <Button Content="Блоки питания" Click="CategoryButton_Click"/>
                        <Button Content="Корпусы" Click="CategoryButton_Click"/>
                        <Button Content="Аксессуары для корпуса" Click="CategoryButton_Click"/>
                        <Button Content="SSD накопители" Click="CategoryButton_Click"/>
                        <Button Content="Жесткие диски" Click="CategoryButton_Click"/>
                        <Button Content="Жесткие диски для ноутбуков" Click="CategoryButton_Click"/>
                        <Button Content="Кишені і док-станції для HDD і SSD" Click="CategoryButton_Click"/>
                        <Button Content="Системы охлаждения" Click="CategoryButton_Click"/>
                        <Button Content="Мониторы" Click="CategoryButton_Click"/>
                        <Button Content="Клавиатура" Click="CategoryButton_Click"/>
                        <Button Content="Мышь" Click="CategoryButton_Click"/>
                        <Button Content="Ковер для мыши" Click="CategoryButton_Click"/>
                        <Button Content="Звуковые карты" Click="CategoryButton_Click"/>
                        <Button Content="Наушники и гарнитура" Click="CategoryButton_Click"/>
                        <Button Content="Микрофон" Click="CategoryButton_Click"/>
                        <Button Content="Програмне забезпечення" Click="CategoryButton_Click"/>
                        <Button Content="Кабели" Click="CategoryButton_Click"/>
                        <Button Content="Внешние жесткие диски" Click="CategoryButton_Click"/>
                        <Button Content="Внешние SSD" Click="CategoryButton_Click"/>
                        <Button Content="Сетевое оборудование" Click="CategoryButton_Click"/>
                        <Button Content="Web-камеры" Click="CategoryButton_Click"/>
                        <Button Content="Дисковод" Click="CategoryButton_Click"/>
                    </StackPanel>

                    <!-- Кнопка Заказать -->
                    <Button Content="Заказать" Background="#00C853" Margin="5,20,5,10" Click="OrderButton_Click"/>

                    <!-- Профиль и корзина -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,10,5,0">
                        <Button Content="👤 Профиль" Background="#333333" Click="ProfileButton_Click"/>
                        <Button Content="🛒 Корзина" Background="#333333" Margin="10,0,0,0" Click="CartButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Шапка -->
                <RowDefinition Height="150"/>
                <!-- Баннер -->
                <RowDefinition Height="*"/>
                <!-- Товары -->
            </Grid.RowDefinitions>

            <!-- Шапка -->
            <Border Grid.Row="0" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Товари з ElitePC" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="15"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Все акции" Width="90" Height="35" Background="#FF5722" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Баннер -->
            <Border Grid.Row="1" Margin="0,10,0,10" Background="#424242">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Добро пожаловать в ElitePC Store!" FontSize="28" Foreground="White" FontWeight="Bold"/>
                    <Image Source="https://via.placeholder.com/400x100/FF5722/FFFFFF?text=Скидки+до+50%" Stretch="Uniform" Margin="20,0"/>
                </StackPanel>
            </Border>

            <!-- Контент с товарами -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Популярные бренды -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Image Source="https://via.placeholder.com/120x50/333333/FFFFFF?text=Kingston" Width="120" Margin="10"/>
                        <Image Source="https://via.placeholder.com/120x50/333333/FFFFFF?text=AMD" Width="120" Margin="10"/>
                        <Image Source="https://via.placeholder.com/120x50/333333/FFFFFF?text=TP-Link" Width="120" Margin="10"/>
                        <Image Source="https://via.placeholder.com/120x50/333333/FFFFFF?text=Asus" Width="120" Margin="10"/>
                        <Image Source="https://via.placeholder.com/120x50/333333/FFFFFF?text=Samsung" Width="120" Margin="10"/>
                    </StackPanel>

                    <!-- Вторая сетка товаров -->
                    <TextBlock Text="Дополнительные товары" FontSize="18" FontWeight="SemiBold" Margin="10,20,10,10"/>
                    <ItemsControl x:Name="AdditionalProductsGrid" Margin="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="5" Width="200" Height="250">
                                    <StackPanel Background="White">
                                        <Image Source="{Binding ImageUrl}" Height="140" Stretch="Uniform" Margin="5"/>
                                        <TextBlock Text="{Binding Name}" FontSize="15" Margin="5" TextAlignment="Center" FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Третья сетка товаров (популярные товары) -->
                    <TextBlock Text="Популярные товары" FontSize="18" FontWeight="SemiBold" Margin="10,20,10,10"/>
                    <ItemsControl x:Name="PopularProductsGrid" Margin="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="5" Width="200" Height="320">
                                    <StackPanel Background="White">
                                        <Image Source="{Binding ImageUrl}" Height="140" Stretch="Uniform" Margin="5"/>
                                        <TextBlock Text="{Binding Name}" FontSize="15" Margin="5" TextAlignment="Center" FontWeight="Medium" TextWrapping="Wrap" Height="80"/>
                                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                                            <TextBlock Text="★" Foreground="#FF9800" FontSize="14"/>
                                            <TextBlock Text="{Binding Rating}" FontSize="14" Margin="2,0"/>
                                            <TextBlock Text="(" Foreground="#757575"/>
                                            <TextBlock Text="{Binding Reviews}" Foreground="#757575"/>
                                            <TextBlock Text=" отз.)" Foreground="#757575"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Price}" FontSize="16" FontWeight="Bold" Margin="5" Foreground="#D32F2F" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Футер -->
                    <Border Background="#2C2F33" Margin="0,20,0,0" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="О КОМПАНИИ" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="О нас" FontSize="14" Foreground="#B0B0B0" Margin="0,10,0,0"/>
                                <TextBlock Text="Сотрудничество" FontSize="14" Foreground="#B0B0B0" Margin="0,5,0,0"/>
                                <TextBlock Text="Вакансии" FontSize="14" Foreground="#B0B0B0" Margin="0,5,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="ПОКУПАТЕЛЯМ" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Доставка" FontSize="14" Foreground="#B0B0B0" Margin="0,10,0,0"/>
                                <TextBlock Text="Оплата" FontSize="14" Foreground="#B0B0B0" Margin="0,5,0,0"/>
                                <TextBlock Text="Гарантия" FontSize="14" Foreground="#B0B0B0" Margin="0,5,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ПОДДЕРЖКА" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Контакты" FontSize="14" Foreground="#B0B0B0" Margin="0,10,0,0"/>
                                <TextBlock Text="Чат" FontSize="14" Foreground="#B0B0B0" Margin="0,5,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="СОЦСЕТИ" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Image Source="https://via.placeholder.com/25x25/FF5722/FFFFFF?text=YT" Width="25" Margin="0,0,5,0"/>
                                    <Image Source="https://via.placeholder.com/25x25/FF5722/FFFFFF?text=FB" Width="25" Margin="0,0,5,0"/>
                                    <Image Source="https://via.placeholder.com/25x25/FF5722/FFFFFF?text=IG" Width="25"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <TextBlock Text="© 2025 ElitePC Store. Все права защищены" FontSize="12" Foreground="#757575" HorizontalAlignment="Center" Margin="0,10"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>