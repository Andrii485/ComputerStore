<Window x:Class="ElmirClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ElitePC" Height="900" Width="1200" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button" x:Key="OrderButtonStyle">
            <Setter Property="Background" Value="#FF5722"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E64A19"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D84315"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="AddToCartButtonStyle">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#388E3C">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Border" x:Key="SubCategoryBorderStyle">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="300"/>
        </Style>
        <Style TargetType="Button" x:Key="SubCategoryButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="CategoryToggleButtonStyle">
            <Setter Property="Content" Value="Каталог"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="157"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="NavigationButtonStyle">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="SearchBoxStyle">
            <Setter Property="Width" Value="354"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Text" Value="Я шукаю..."/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox" x:Key="PriceFilterTextBoxStyle">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#2C2F33">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <Image Source="https://i.postimg.cc/02SPKrX0/2025-04-17-000603.png" Width="85" Height="56" Cursor="Hand" MouseLeftButtonDown="Logo_Click"/>
                    <Button x:Name="BackButton" Content="←" Click="BackButton_Click" Style="{StaticResource NavigationButtonStyle}"/>
                    <Button x:Name="ForwardButton" Content="→" Click="ForwardButton_Click" Style="{StaticResource NavigationButtonStyle}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox x:Name="SearchBox" Style="{StaticResource SearchBoxStyle}"
                             GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus" KeyDown="SearchBox_KeyDown"/>
                    <Button x:Name="SearchButton" Content="🔍" Width="40" Height="30" Margin="5,0" Click="SearchButton_Click" Background="#4CAF50" Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Button x:Name="CartButton" Content="Корзина" Click="CartButton_Click" Style="{StaticResource OrderButtonStyle}" Margin="0,0,10,0"/>
                    <Button x:Name="ProfileButton" Content="Профиль" Click="ProfileButton_Click" Style="{StaticResource OrderButtonStyle}" Margin="0,0,10,0"/>
                    <Button x:Name="LogoutButton" Content="Выйти" Click="LogoutButton_Click" Style="{StaticResource OrderButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Бічна панель із категоріями та фільтрами -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#E0E0E0" Margin="5">
            <Button x:Name="CategoryToggleButton" Click="CategoryToggleButton_Click" Style="{StaticResource CategoryToggleButtonStyle}"/>
            <StackPanel x:Name="CategoryPanel" Margin="5" Visibility="Collapsed"/>
            <StackPanel x:Name="FilterPanel" Margin="5" Visibility="Collapsed">
                <TextBlock Text="Фільтри" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="Бренди" FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                <StackPanel x:Name="BrandsPanel" Margin="0,0,0,10"/>
                <TextBlock Text="Ціна" FontSize="14" FontWeight="Medium" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Від:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="PriceFromTextBox" Style="{StaticResource PriceFilterTextBoxStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="До:" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="PriceToTextBox" Style="{StaticResource PriceFilterTextBoxStyle}"/>
                </StackPanel>
                <Button x:Name="ApplyFiltersButton" Content="Застосувати" Click="ApplyFiltersButton_Click" Style="{StaticResource OrderButtonStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Основний контент -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="OrderPanel" Grid.Row="0" Visibility="Collapsed" Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Статуси замовлень" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ListBox x:Name="OrdersList" Height="100" Margin="0,0,0,10"/>
                <Button x:Name="ReturnButton" Content="Повернення товару" Click="ReturnButton_Click" Margin="0,10,0,0" Style="{StaticResource OrderButtonStyle}"/>
                <TextBlock Margin="0,10,0,0">
                    <Hyperlink NavigateUri="/MainWindow.xaml" RequestNavigate="Hyperlink_RequestNavigate">
                        Перейти на головну сторінку товарів
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ContentPanel" Orientation="Vertical"/>
            </ScrollViewer>
            <StackPanel x:Name="ProfilePanel" Orientation="Vertical" Background="White" Visibility="Collapsed" Margin="0,0,0,10">
                <TextBlock Text="Профіль" FontSize="18" FontWeight="SemiBold" Margin="10"/>
                <StackPanel Margin="10">
                    <TextBox x:Name="FirstNameTextBox" Text="{Binding FirstName}" Margin="0,5"/>
                    <TextBox x:Name="MiddleNameTextBox" Text="{Binding MiddleName}" Margin="0,5"/>
                    <TextBox x:Name="PhoneTextBox" Text="{Binding Phone}" Margin="0,5"/>
                    <TextBox x:Name="EmailTextBox" Text="{Binding Email}" Margin="0,5"/>
                    <Button x:Name="SaveProfileButton" Content="Зберегти" Click="SaveProfileButton_Click" Margin="0,10,0,0" Style="{StaticResource OrderButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>