<Window x:Class="ElmirClone.SellerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель продавца ElitePC" Height="700" Width="1200" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF5722"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2C2F33">
            <TextBlock Text="Панель продавца ElitePC" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="15"/>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковая панель -->
            <StackPanel Grid.Column="0" Background="#E0E0E0" Margin="5">
                <Button Content="Управление товарами" Click="ShowProductsPanel_Click"/>
                <Button Content="Управление заказами" Click="ShowOrdersPanel_Click"/>
                <Button Content="Финансы" Click="ShowFinancePanel_Click"/>
                <Button Content="Профиль магазина" Click="ShowProfilePanel_Click"/>
                <Button Content="Выйти" Style="{StaticResource LogoutButtonStyle}" Click="Logout_Click" Margin="5,20,5,5"/>
            </StackPanel>

            <!-- Панель управления -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Панель управления товарами -->
                    <StackPanel x:Name="ProductsPanel" Visibility="Visible">
                        <TextBlock Text="Управление товарами" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="NewProductName" Width="150" Margin="0,0,5,0" Text="Название товара"/>
                            <TextBox x:Name="NewProductDescription" Width="150" Margin="0,0,5,0" Text="Описание"/>
                            <TextBox x:Name="NewProductPrice" Width="80" Margin="0,0,5,0" Text="Цена"/>
                            <TextBox x:Name="NewProductBrand" Width="100" Margin="0,0,5,0" Text="Бренд"/>
                            <ComboBox x:Name="ProductCategory" Width="120" Margin="0,0,5,0"/>
                            <TextBox x:Name="NewProductImagePath" Width="150" Margin="0,0,5,0" Text="Путь к изображению" IsReadOnly="True"/>
                            <Button Content="Выбрать изображение" Click="SelectImageButton_Click" Width="120"/>
                            <Button Content="Добавить товар" Click="AddProduct_Click" Width="120"/>
                        </StackPanel>
                        <ItemsControl x:Name="ProductsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding Name}" Width="150"/>
                                        <TextBlock Text="{Binding Description}" Width="150"/>
                                        <TextBlock Text="{Binding Price}" Width="80"/>
                                        <TextBlock Text="{Binding Brand}" Width="100"/>
                                        <TextBlock Text="{Binding CategoryName}" Width="120"/>
                                        <TextBlock Text="{Binding ImagePath}" Width="150"/>
                                        <Button Content="Редактировать" Click="EditProduct_Click" Tag="{Binding ProductId}" Width="100"/>
                                        <Button Content="Удалить" Click="DeleteProduct_Click" Tag="{Binding ProductId}" Width="80"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Панель управления заказами -->
                    <StackPanel x:Name="OrdersPanel" Visibility="Collapsed">
                        <TextBlock Text="Управление заказами" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ItemsControl x:Name="OrdersList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding OrderId}" Width="100"/>
                                        <TextBlock Text="{Binding ProductName}" Width="200"/>
                                        <TextBlock Text="{Binding Quantity}" Width="100"/>
                                        <TextBlock Text="{Binding TotalPrice}" Width="100"/>
                                        <TextBlock Text="{Binding OrderDate}" Width="150"/>
                                        <TextBlock Text="{Binding Status}" Width="100"/>
                                        <ComboBox x:Name="OrderStatusCombo" Width="100" Margin="5,0" SelectedItem="{Binding Status}">
                                            <ComboBoxItem Content="Pending"/>
                                            <ComboBoxItem Content="Confirmed"/>
                                            <ComboBoxItem Content="Shipped"/>
                                            <ComboBoxItem Content="Delivered"/>
                                            <ComboBoxItem Content="Cancelled"/>
                                        </ComboBox>
                                        <Button Content="Обновить" Click="UpdateOrderStatus_Click" Tag="{Binding OrderId}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Панель финансов -->
                    <StackPanel x:Name="FinancePanel" Visibility="Collapsed">
                        <TextBlock Text="Финансы" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="Общий доход (после комиссии):" FontSize="16" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalRevenueText" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="История продаж" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <ItemsControl x:Name="SalesHistoryList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding OrderId}" Width="100"/>
                                        <TextBlock Text="{Binding ProductName}" Width="200"/>
                                        <TextBlock Text="{Binding TotalPrice}" Width="100"/>
                                        <TextBlock Text="{Binding SellerRevenue}" Width="100"/>
                                        <TextBlock Text="{Binding OrderDate}" Width="150"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Панель профиля магазина -->
                    <StackPanel x:Name="ProfilePanel" Visibility="Collapsed">
                        <TextBlock Text="Профиль магазина" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Название магазина:" Width="150"/>
                            <TextBox x:Name="StoreNameTextBox" Width="300"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Описание:" Width="150"/>
                            <TextBox x:Name="StoreDescriptionTextBox" Width="300" Height="100" AcceptsReturn="True"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Контакты:" Width="150"/>
                            <TextBox x:Name="StoreContactInfoTextBox" Width="300"/>
                        </StackPanel>
                        <Button Content="Сохранить" Click="SaveProfile_Click" Width="150"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>