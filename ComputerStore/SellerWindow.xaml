<Window x:Class="ElmirClone.SellerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель продавця ElitePC" Height="700" Width="1200" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF5722"/>
        </Style>
        <Style x:Key="SendButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2C2F33">
            <TextBlock Text="Панель продавця ElitePC" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="15"/>
        </Border>

        <!-- Основний контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Бічна панель -->
            <StackPanel Grid.Column="0" Background="#E0E0E0" Margin="5">
                <Button Content="Керування товарами" Click="ShowProductsPanel_Click"/>
                <Button Content="Керування замовленнями" Click="ShowOrdersPanel_Click"/>
                <Button Content="Фінанси" Click="ShowFinancePanel_Click"/>
                <Button Content="Профіль магазину" Click="ShowProfilePanel_Click"/>
                <Button Content="Вийти" Style="{StaticResource LogoutButtonStyle}" Click="Logout_Click" Margin="5,20,5,5"/>
            </StackPanel>

            <!-- Панель керування -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Панель керування товарами -->
                    <StackPanel x:Name="ProductsPanel" Visibility="Visible">
                        <TextBlock Text="Керування товарами" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="NewProductName" Width="150" Margin="0,0,5,0" Text="Назва товару"/>
                            <TextBox x:Name="NewProductDescription" Width="150" Margin="0,0,5,0" Text="Опис"/>
                            <TextBox x:Name="NewProductPrice" Width="80" Margin="0,0,5,0" Text="Ціна"/>
                            <TextBox x:Name="NewProductBrand" Width="100" Margin="0,0,5,0" Text="Бренд"/>
                            <ComboBox x:Name="ProductCategory" Width="120" Margin="0,0,5,0"/>
                            <TextBox x:Name="NewProductImagePath" Width="150" Margin="0,0,5,0" Text="Шлях до зображення" IsReadOnly="True"/>
                            <Button Content="Вибрати зображення" Click="SelectImageButton_Click" Width="120"/>
                            <Button Content="Додати товар" Click="AddProduct_Click" Width="120"/>
                        </StackPanel>
                        <ItemsControl x:Name="ProductsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding Name}" Width="150"/>
                                        <TextBlock Text="{Binding Description}" Width="150"/>
                                        <TextBlock Text="{Binding Price}" Width="80"/>
                                        <TextBlock Text="{Binding Brand}" Width="100"/>
                                        <TextBlock Text="{Binding CategoryName}" Width="120"/>
                                        <TextBlock Text="{Binding ImagePath}" Width="150"/>
                                        <Button Content="Редагувати" Click="EditProduct_Click" Tag="{Binding ProductId}" Width="100"/>
                                        <Button Content="Видалити" Click="DeleteProduct_Click" Tag="{Binding ProductId}" Width="80"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Панель керування замовленнями -->
                    <StackPanel x:Name="OrdersPanel" Visibility="Collapsed">
                        <TextBlock Text="Керування замовленнями" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ItemsControl x:Name="OrdersList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,5">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding OrderId}" Width="100"/>
                                            <TextBlock Text="{Binding ProductName}" Width="200"/>
                                            <TextBlock Text="{Binding Quantity}" Width="100"/>
                                            <TextBlock Text="{Binding TotalPrice}" Width="100"/>
                                            <TextBlock Text="{Binding OrderDate}" Width="150"/>
                                            <TextBlock Text="{Binding Status}" Width="100"/>
                                            <ComboBox x:Name="OrderStatusCombo" Width="100" Margin="5,0" SelectedItem="{Binding Status}">
                                                <ComboBoxItem Content="Очікується"/>
                                                <ComboBoxItem Content="Підтверджено"/>
                                                <ComboBoxItem Content="Відправлено"/>
                                                <ComboBoxItem Content="Доставлено"/>
                                                <ComboBoxItem Content="Скасовано"/>
                                            </ComboBox>
                                            <Button Content="Оновити" Click="UpdateOrderStatus_Click" Tag="{Binding OrderId}"/>
                                            <Button Content="Відправити замовлення" Style="{StaticResource SendButtonStyle}" Click="SendOrder_Click" Tag="{Binding OrderId}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Інформація про замовника:" FontWeight="Bold" Width="150"/>
                                            <TextBlock Text="{Binding ContactLastName}" Width="100"/>
                                            <TextBlock Text="{Binding ContactFirstName}" Width="100"/>
                                            <TextBlock Text="{Binding ContactMiddleName}" Width="100"/>
                                            <TextBlock Text="{Binding ContactPhone}" Width="150"/>
                                            <TextBlock Text="{Binding ShippingRegion}" Width="150"/>
                                            <TextBlock Text="{Binding PickupPointAddress}" Width="200"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Панель фінансів -->
                    <StackPanel x:Name="FinancePanel" Visibility="Collapsed">
                        <TextBlock Text="Фінанси" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="Загальний дохід (після комісії):" FontSize="16" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalRevenueText" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Історія продажів" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <ItemsControl x:Name="SalesHistoryList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding OrderId}" Width="100"/>
                                        <TextBlock Text="{Binding ProductName}" Width="200"/>
                                        <TextBlock Text="{Binding TotalPrice}" Width="100"/>
                                        <TextBlock Text="{Binding SellerRevenue}" Width="100"/>
                                        <TextBlock Text="{Binding OrderDate}" Width="150"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Панель профілю магазину -->
                    <StackPanel x:Name="ProfilePanel" Visibility="Collapsed">
                        <TextBlock Text="Профіль магазину" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Назва магазину:" Width="150"/>
                            <TextBox x:Name="StoreNameTextBox" Width="300"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Опис:" Width="150"/>
                            <TextBox x:Name="StoreDescriptionTextBox" Width="300" Height="100" AcceptsReturn="True"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Контакти:" Width="150"/>
                            <TextBox x:Name="StoreContactInfoTextBox" Width="300"/>
                        </StackPanel>
                        <Button Content="Зберегти" Click="SaveProfile_Click" Width="150"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>