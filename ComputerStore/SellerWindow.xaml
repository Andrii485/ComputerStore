<Window x:Class="ElmirClone.SellerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель продавця ElitePC" Height="700" Width="1200" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF5722"/>
        </Style>
        <Style x:Key="SendButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#2C2F33">
            <TextBlock Text="Панель продавця ElitePC" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="15"/>
        </Border>

        <!-- Основний контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Бічна панель -->
            <StackPanel Grid.Column="0" Background="#E0E0E0" Margin="5">
                <Button Content="Керування товарами" Click="ShowProductsPanel_Click"/>
                <Button Content="Керування замовленнями" Click="ShowOrdersPanel_Click"/>
                <Button Content="Фінанси" Click="ShowFinancePanel_Click"/>
                <Button Content="Профіль магазину" Click="ShowProfilePanel_Click"/>
                <Button Content="Вийти" Style="{StaticResource LogoutButtonStyle}" Click="Logout_Click" Margin="5,20,5,5"/>
            </StackPanel>

            <!-- Панель керування -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Панель керування товарами -->
                    <StackPanel x:Name="ProductsPanel" Visibility="Visible">
                        <TextBlock Text="Керування товарами" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="NewProductName" Width="150" Margin="0,0,5,0" Text="Назва товару"/>
                            <TextBox x:Name="NewProductDescription" Width="150" Margin="0,0,5,0" Text="Опис"/>
                            <TextBox x:Name="NewProductPrice" Width="80" Margin="0,0,5,0" Text="Ціна"/>
                            <TextBox x:Name="NewProductBrand" Width="100" Margin="0,0,5,0" Text="Бренд"/>
                            <ComboBox x:Name="ProductCategory" Width="120" Margin="0,0,5,0" DisplayMemberPath="Name" SelectedValuePath="CategoryId"/>
                            <ComboBox x:Name="ProductSubcategory" Width="120" Margin="0,0,5,0" DisplayMemberPath="Name" SelectedValuePath="SubcategoryId"/>
                            <TextBox x:Name="NewProductImagePath" Width="150" Margin="0,0,5,0" Text="Шлях до зображення" IsReadOnly="True"/>
                            <Button Content="Вибрати зображення" Click="SelectImageButton_Click" Width="120"/>
                            <Button Content="Додати товар" Click="AddProduct_Click" Width="120"/>
                        </StackPanel>
                        <DataGrid x:Name="ProductsList" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="150"/>
                                <DataGridTextColumn Header="Ціна" Binding="{Binding Price}" Width="80"/>
                                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand}" Width="100"/>
                                <DataGridTextColumn Header="Категорія" Binding="{Binding CategoryName}" Width="120"/>
                                <DataGridTextColumn Header="Підкатегорія" Binding="{Binding SubcategoryName}" Width="120"/>
                                <DataGridTextColumn Header="Зображення" Binding="{Binding ImageUrl}" Width="150"/>
                                <!-- Заменили ImagePath на ImageUrl -->
                                <DataGridTemplateColumn Header="Дії" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Редагувати" Click="EditProduct_Click" Tag="{Binding ProductId}" Width="100" Margin="0,0,5,0"/>
                                                <Button Content="Видалити" Click="DeleteProduct_Click" Tag="{Binding ProductId}" Width="80"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Панель керування замовленнями -->
                    <StackPanel x:Name="OrdersPanel" Visibility="Collapsed">
                        <TextBlock Text="Керування замовленнями" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <DataGrid x:Name="OrdersList" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID замовлення" Binding="{Binding OrderId}" Width="100"/>
                                <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="200"/>
                                <DataGridTextColumn Header="Кількість" Binding="{Binding Quantity}" Width="100"/>
                                <DataGridTextColumn Header="Сума" Binding="{Binding TotalPrice}" Width="100"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate}" Width="150"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                                <DataGridTemplateColumn Header="Оновити статус" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="100" Margin="5,0">
                                                <ComboBoxItem Content="Очікується"/>
                                                <ComboBoxItem Content="Підтверджено"/>
                                                <ComboBoxItem Content="Відправлено"/>
                                                <ComboBoxItem Content="Доставлено"/>
                                                <ComboBoxItem Content="Скасовано"/>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Дії" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Оновити" Click="UpdateOrderStatus_Click" Tag="{Binding OrderId}" Width="80" Margin="0,0,5,0"/>
                                                <Button Content="Відправити" Style="{StaticResource SendButtonStyle}" Click="SendOrder_Click" Tag="{Binding OrderId}" Width="120"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Прізвище" Binding="{Binding ContactLastName}" Width="100"/>
                                <DataGridTextColumn Header="Ім'я" Binding="{Binding ContactFirstName}" Width="100"/>
                                <DataGridTextColumn Header="По батькові" Binding="{Binding ContactMiddleName}" Width="100"/>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding ContactPhone}" Width="150"/>
                                <DataGridTextColumn Header="Регіон" Binding="{Binding ShippingRegion}" Width="150"/>
                                <DataGridTextColumn Header="Адреса" Binding="{Binding PickupPointAddress}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Панель фінансів -->
                    <StackPanel x:Name="FinancePanel" Visibility="Collapsed">
                        <TextBlock Text="Фінанси" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="Загальний дохід (після комісії):" FontSize="16" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalRevenueText" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Історія продажів" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <DataGrid x:Name="SalesHistoryList" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID замовлення" Binding="{Binding OrderId}" Width="100"/>
                                <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="200"/>
                                <DataGridTextColumn Header="Сума" Binding="{Binding TotalPrice}" Width="100"/>
                                <DataGridTextColumn Header="Дохід продавця" Binding="{Binding SellerRevenue}" Width="100"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Панель профілю магазину -->
                    <StackPanel x:Name="ProfilePanel" Visibility="Collapsed">
                        <TextBlock Text="Профіль магазину" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Назва магазину:" Width="150"/>
                            <TextBox x:Name="StoreNameTextBox" Width="300"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Опис:" Width="150"/>
                            <TextBox x:Name="StoreDescriptionTextBox" Width="300" Height="100" AcceptsReturn="True"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Контакти:" Width="150"/>
                            <TextBox x:Name="StoreContactInfoTextBox" Width="300"/>
                        </StackPanel>
                        <Button Content="Зберегти" Click="SaveProfile_Click" Width="150"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>