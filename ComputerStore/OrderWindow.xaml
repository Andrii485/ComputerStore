<Window x:Class="ElmirClone.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="700" Width="600" Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#444444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Оформление заказа" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

            <!-- Контактные данные -->
            <TextBlock Text="Контактные данные" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Имя:" Width="150"/>
                <TextBox x:Name="ContactFirstName" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Отчество:" Width="150"/>
                <TextBox x:Name="ContactMiddleName" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Телефон:" Width="150"/>
                <TextBox x:Name="ContactPhone" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Email:" Width="150"/>
                <TextBox x:Name="ContactEmail" Width="300"/>
            </StackPanel>

            <!-- Выбор области -->
            <TextBlock Text="Область доставки" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ComboBox x:Name="ShippingRegion" Width="300" HorizontalAlignment="Left" Margin="0,0,0,20"/>

            <!-- Выбор пункта самовывоза -->
            <TextBlock Text="Пункт самовывоза" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ComboBox x:Name="PickupPoint" Width="300" HorizontalAlignment="Left" DisplayMemberPath="Address" SelectedValuePath="PickupPointId" Margin="0,0,0,20"/>

            <!-- Способы оплаты -->
            <TextBlock Text="Способ оплаты" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ComboBox x:Name="PaymentMethod" Width="300" HorizontalAlignment="Left" DisplayMemberPath="Name" SelectedValuePath="PaymentMethodId" Margin="0,0,0,20"/>

            <!-- Подтверждение заказа -->
            <Button Content="Подтвердить заказ" Click="ConfirmOrder_Click" Width="200"/>
        </StackPanel>
    </ScrollViewer>
</Window>